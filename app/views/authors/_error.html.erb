<% if @author.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
     <%= t ".the_form" %> <%= pluralize @author.errors.count, t(".error") %>.
    </div>
    <ul>
      <% @author.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
